@model P1.Models.OrderBuilderView

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pizzas.FirstOrDefault().Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizzas.FirstOrDefault().Crust)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizzas.FirstOrDefault().Toppings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizzas.FirstOrDefault().Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pizzas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crust)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Toppings)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    <tr>
        <td>
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
            <strong>@Html.DisplayFor(modelItem => Model.Price)</strong>
        </td>
    </tr>
    <tr>
        <td>
            <select form="NewPizza" name="id">
                @foreach (var item in ViewBag.PreBuilts)
                {
                    if (item.Key == 0)
                    {
                        <option selected value="@item.Key">@item.Value</option>
                    }
                    else { 
                        <option value="@item.Key">@item.Value</option>
                    }
                }
            </select>
        </td>
        <td>
            <form id="NewPizza" asp-action="Create" method="get">
                <input type="submit" value="Add Pizza" class="btn btn-primary" />
            </form>
        </td>
        <td>
        </td>
        <td>
            <form asp-action="Confirm">
                <input type="submit" value="Confirm" class="btn btn-primary" />
            </form>
        </td>
    </tr>
    </tbody>
</table>
